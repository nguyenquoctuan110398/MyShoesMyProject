<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DoangThuActivity">
    <LinearLayout
        android:weightSum="13"
        android:background="@color/myshoe_xanh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/doanhthu">
        <TextView
            android:paddingLeft="@dimen/can_le"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOANH THU"
            android:textSize="@dimen/size_chu"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/myshoe_xam"
        android:layout_below="@+id/doanhthu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:stretchColumns="*"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size_chu_bang"
                    android:gravity="center"
                    android:text="STT"/>
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Mã sp"
                    android:textSize="@dimen/size_chu_bang"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <TextView
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Tên Sản Phẩm"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size_chu_bang"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="SL"
                    android:textSize="@dimen/size_chu_bang"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size_chu_bang"
                    android:text="Thành Giá"
                    android:textStyle="bold"
                    android:gravity=""/>
                <TextView
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Thời Gian"
                    android:textStyle="bold"
                    android:textSize="@dimen/size_chu_bang"
                    android:textColor="@android:color/black"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="@dimen/size_chu_bang"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="AF1"
                    android:gravity="center"
                    android:textSize="@dimen/size_chu_bang"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size_chu_bang"
                    android:text="Air Force 1"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="@dimen/size_chu_bang"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="300k"
                    android:textSize="@dimen/size_chu_bang"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>
                <TextView
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size_chu_bang"
                    android:text="13:25:30"
                    android:gravity="center"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textSize="@dimen/size_chu_bang"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="AF1"
                    android:gravity="center"
                    android:textSize="@dimen/size_chu_bang"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size_chu_bang"
                    android:text="Vans Old Skoll"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textSize="@dimen/size_chu_bang"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size_chu_bang"
                    android:text="800k"/>
                <TextView
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size_chu_bang"
                    android:text="15:11:59"
                    android:gravity="center"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/myshoe_xanh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_DoanhThu"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doanh Thu"
            android:textAllCaps="false"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_Kho"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Kho"
            android:textStyle="bold"/>
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bán Hàng"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:id="@+id/btn_BanHang"/>
        <Button
            android:id="@+id/btn_TuyChon"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tùy Chọn"
            android:textAllCaps="false"
            android:textStyle="bold"/>

    </LinearLayout>
</RelativeLayout>
